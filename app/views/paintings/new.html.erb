<h1> new painting </h1>
<%= form_for Painting.new, :html => {:multipart => true} do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p><%= form.label :image, "upload paintings:" %><br>
    <%= form.file_field :image, multiple: true, name: "painting[image]" %>
    </p>
  <%= form.submit %>
  <% end %>

<script id="template-upload" type="text/x-tmpl">
<div class="upload">
  {%=o.name%}
  <div class="progress"><div class="bar" style="width: 0%"></div></div>
</div>
</script>


<%= link_to 'Back', paintings_path %>